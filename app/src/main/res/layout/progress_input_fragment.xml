<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/triangle_background"
    tools:context=".ui.main.ProgressInputFragment"
    android:focusable="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/addProgressButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/editTextWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hugeMargin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/big_margin"
            android:background="@drawable/progress_input_background"
            app:layout_constraintBottom_toTopOf="@id/addProgressButton"
            app:layout_constraintEnd_toStartOf="@+id/spinnerWrapper"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/addProgressButton"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/enter_progress_editText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="@string/update_progress_here"
                android:importantForAutofill="no"
                android:inputType="number"
                android:paddingHorizontal="@dimen/smallPadding"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHint="@color/black"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/spinnerWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginTop="@dimen/hugeMargin"
            android:layout_marginBottom="@dimen/big_margin"
            android:background="@drawable/progress_input_background"
            app:layout_constraintBottom_toTopOf="@+id/addProgressButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/editTextWrapper"
            app:layout_constraintTop_toTopOf="parent">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:paddingHorizontal="@dimen/smallPadding"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addProgressButton"
        android:layout_marginTop="@dimen/big_margin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
        android:layout_marginHorizontal="@dimen/big_margin"
            android:text="@string/update"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>