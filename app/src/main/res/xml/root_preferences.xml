<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Sound">
        <SwitchPreferenceCompat
            app:key="SoundFX"
            app:title="Play sound effects"
            app:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="Reminders"
            app:title="Send reminders"
            app:defaultValue="true"/>


    </PreferenceCategory>

    <Preference
        app:title="About"
        app:key="about">
    </Preference>


</PreferenceScreen>