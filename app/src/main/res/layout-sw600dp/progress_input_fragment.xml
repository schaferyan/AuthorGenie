<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="300dp"
    android:layout_margin="0dp"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/triangle_background"
    tools:context=".ui.main.ProgressInputFragment"
    android:focusable="true">


    <RelativeLayout
        android:id="@+id/editTextWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/hugeMargin"
        android:background="@drawable/progress_input_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/enter_progress_editText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="@string/update_progress_here"
            android:importantForAutofill="no"
            android:inputType="number"
            android:paddingHorizontal="@dimen/smallPadding"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColorHint="@color/black"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/spinnerWrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:background="@drawable/progress_input_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextWrapper"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:paddingHorizontal="@dimen/smallPadding"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </RelativeLayout>

    <Button
        android:id="@+id/addProgressButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/hugeMargin"
        android:paddingVertical="@dimen/big_padding"
        android:paddingHorizontal="@dimen/huge_padding"
        android:text="@string/update"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerWrapper"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>